<!doctype html>
<html lang="en">
<head>
    <%- include('../layouts/head.ejs'); %>

    <title>Elly - Payment</title>
</head>

<body>
<%- include('../layouts/navbar', {view: 'user', active: 'payment'}); %>

<main>
    <!-- Hero Section -->
    <section id="hero" class="text-center bg-light">
        <div class="container py-4 py-md-5">
            <h1 class="text-dark font-slab mb-5">
                <i class="fa fa-shopping-cart"></i>
                Payment
            </h1>

            <div class="card">
                <div class="card-body text-start p-4">

                    <div class="row">
                        <div class="col-sm-3">
                            <label class="col-form-label">Barcode:</label>
                        </div>

                        <div class="col-sm-9">
                            <h3 class="text-left">AAA0000005</h3>
                        </div>
                    </div>

                    <form method="post">
                        <div class="form-group row mt-4">
                            <label class="col-sm-3 col-form-label">First Name:</label>
                            <div class="col-sm-9">
                                <input class="form-control">
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <label class="col-sm-3 col-form-label">Middle Name:</label>
                            <div class="col-sm-9">
                                <input class="form-control">
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <label class="col-sm-3 col-form-label">Last Name:</label>
                            <div class="col-sm-9">
                                <input class="form-control">
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <div class="col-sm-3">
                                <label class="col-form-label">Sex:</label>
                            </div>
                            <div class="col-sm-9 mt-2">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" value="male">
                                    <label class="form-check-label">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" value="female">
                                    <label class="form-check-label">Female</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <label class="col-sm-3 col-form-label">Birth Date:</label>
                            <div class="col-sm-9">
                                <input class="form-control">
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <label class="col-sm-3 col-form-label">Passport:</label>
                            <div class="col-sm-9">
                                <input class="form-control">
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <label class="col-sm-3 col-form-label">Nationality:</label>
                            <div class="col-sm-9">
                                <input class="form-control">
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <div class="col-sm-9 offset-3">
                                <div class="d-grid">
                                    <button class="btn btn-primary mt-5 btn-block payment_btn" type="submit">Proceed to
                                        payment
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </section>
</main>

<%- include('../layouts/footer.ejs'); %>

<!-- Bundled JS: Bootstrap, jQuery, Lodash -->
<script src="scripts/bundle.js"></script>

<!-- Custom JavaScript -->
<script src="scripts/placeholder.js"></script>
</body>
</html>